div.jumbotron.masthead
    div.container
        h1 Carrden Inventory Administration
        p Push some of these buttons to do stuff
        div.btn-group
            button(
                id='create-db'
                class='btn btn-default'
                role='button'
                url='/admin/db/create-tables/')
                span.glyphicon.glyphicon-file
                span Initialize tables
            button(
                id='load-test'
                class='btn btn-default'
                role='button'
                url='/admin/db/load-test-data/')
                span.glyphicon.glyphicon-save-file
                span Load test data
            button(
                id='destroy-everything'
                class='btn btn-danger'
                role='button'
                url='/admin/db/drop-tables/')
                span.glyphicon.glyphicon-trash
                span DESTROY EVERYTHING
div.container
    div(id='admin-status' class='alert alert-block alert-dismissable fade')
        button(type='button' class='close' data-dismiss='alert' aria-label='Close')
            span(aria-hidden='true') &times;
        strong(id='admin-status-head')
        span(id='admin-status-text')
    div(class="panel panel-default")
        div.panel-heading Current inventory
        ul.list-group
            - for( (item, count) <- inventory)
                li.list-group-item
                    span.badge=count
                    =item
        div.panel-heading Test Sale Ledger
        table.table.table-hover
            th Sale Number
            th Date
            th Item
            th Count
            th Revenue
            - for( sale <- sales )
                tr
                    td=sale._2
                    td=sale._1
                    td=sale._3
                    td=sale._4
                    td="$" + sale._5