-@ val inventory: List[String]

- attributes("title") = "Carrden Inventory Admin"
div.jumbotron.masthead
    div.container
        h1 Carrden Inventory Administration
        p Push some of these buttons to do stuff
        div.btn-group
            a(
                class='btn btn-default btn-lg'
                role='button'
                href='/admin/db/create-tables/')
                span.glyphicon.glyphicon-file
                span Initialize tables
            a(
                class='btn btn-default btn-lg'
                role='button'
                href='/admin/db/load-test-data/')
                span.glyphicon.glyphicon-save-file
                span Load test data
            a(
                class='btn btn-danger btn-lg'
                role='button'
                href='/admin/db/drop-tables/')
                span.glyphicon.glyphicon-trash
                span DESTROY EVERYTHING
div.container
    div(class="panel panel-default")
        div.panel-heading Current inventory
        ul(class='list-group')
            - for( item <- inventory)
                li.list-group-item=item
