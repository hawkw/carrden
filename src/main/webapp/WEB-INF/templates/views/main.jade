div.container

    div(
        class='modal'
        id='sale'
        role='dialog'
        tabindex='-1'
        aria-labelledby='Sale'
        aria-hidden='true')
        div.modal-dialog
            div.modal-content
                div.modal-header
                    button(
                        type='button'
                        class='close sale-close'
                        data-dismiss='modal') &times;
                    h2 Sale
                    div(id='sale-form-status' class='alert alert-block fade' )
                        button(type='button' class='close sale-close') &times;
                        span(id='sale-form-status-text')
                div.modal-body
                    form(
                    id='sale-form'
                    class='form-horizontal well'
                    data-async data-target='#sale-form'
                    action='/sale/'
                    method='post')
                        fieldset(form='sale-form')
                            ul
                                - for ( (kind, _) <- inventory)
                                    - var kind_sanitized = kind.replace(' ', '_')
                                    li(style='list-style-type: none;padding: 10px;')
                                        div.input-group
                                            span.input-group-addon
                                                =kind
                                            input(
                                                name=kind_sanitized
                                                id="sale-form-#{kind_sanitized}"
                                                type='text'
                                                class='form-control live-price-source'
                                                placeholder='amount')
                                            span(class='label label-inside-input' id='sale-form-#{kind_sanitized}-label')


                div.modal-footer
                    div(
                    class='btn-group'
                    role='group')
                        button(
                        id='cancel-sale'
                        type='button'
                        class='btn btn-danger sale-close'
                        data-dismiss='modal')
                            span(class='glyphicon glyphicon-remove')
                            span Cancel Sale
                        button(
                        type='submit'
                        form="sale-form"
                        class='btn btn-success')
                            span(class='glyphicon glyphicon-ok')
                            span Submit

    div(
    class='modal'
    id='update'
    role='dialog'
    tabindex='-1'
    aria-labelledby='Update Inventory'
    aria-hidden='true')
        div.modal-dialog
            div.modal-content
                div.modal-header
                    button(
                    type='button'
                    class='close update-close'
                    data-dismiss='modal') &times;
                    h2 Update Inventory
                    div(id='update-form-status' class='alert alert-block fade' )
                        button(type='button' class='close update-close') &times;
                        span(id='update-form-status-text')
                div.modal-body
                    form(
                    id='update-form'
                    class='form-horizontal well'
                    data-async data-target='#update-form'
                    action='/update-inventory/'
                    method='post')
                        fieldset(form='update-form')
                            ul
                                - for ( (kind, _) <- inventory)
                                    - var kind_sanitized = kind.replace(' ', '_')
                                    li(style='list-style-type: none;padding: 10px;')
                                        div.input-group
                                            span.input-group-addon
                                                =kind
                                            input(
                                                name=kind_sanitized
                                                id="update-form-#{kind_sanitized}"
                                                type='text'
                                                class='form-control positive-only'
                                                placeholder='amount')
                                            span(class='label label-inside-input live-price' id='update-form-#{kind_sanitized}-label')
                div.modal-footer
                    div(
                    class='btn-group'
                    role='group')
                        button(
                        id='cancel-sale'
                        type='button'
                        class='btn btn-danger update-close'
                        data-dismiss='modal')
                            span(class='glyphicon glyphicon-remove')
                            span Cancel
                        button(
                        type='submit'
                        form="update-form"
                        class='btn btn-success')
                            span(class='glyphicon glyphicon-ok')
                            span Submit
    div.col-md-3
        div(class="panel panel-default" id="current-inventory")
            div.panel-heading
                strong Current inventory
            ul.list-group
                - for( (item, count) <- inventory)
                    li.list-group-item
                        span.badge=count
                        =item


