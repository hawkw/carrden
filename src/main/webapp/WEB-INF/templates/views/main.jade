-@ val inventory: List[String]

- attributes("title") = "Carrden Inventory"
div.jumbotron.masthead
    div.container
        h1 Carrden Inventory
        p Push some of these buttons to do stuff
        button(
        data-toggle='modal'
        data-target='#sale-modal'
        class='btn btn-primary btn-lg')
            span(class='glyphicon glyphicon-edit')
            span Enter Sale

:javascript
    jQuery(function ($) {
        $('form[data-async]').live('submit', function (event) {
            var $form = $(this);
            var $target = $($form.attr('data-target'));
            $.ajax({
                type: $form.attr('method'),
                url: $form.attr('action'),
                data: $form.serialize(),
                success: function (data, status) {
                    $target.html(data);
                }
            });
            event.preventDefault();
        });
    });


div.container

    div(
        class='modal fade'
        id='sale-modal'
        role='dialog'
        tabindex='-1'
        aria-labelledby='myModalLabel'
        aria-hidden='true')
        div.modal-dialog
            div.modal-content
                div.modal-header
                    button(
                        type='button'
                        class='close'
                        data-dismiss='modal') x
                    h2 Sale
                div.modal-body
                    form(
                    class='form-horizontal well'
                            data-async data-target='#rating-modal'
                            action='/some-endpoint'
                            method='POST')
                        fieldset
                div.modal-footer
                    div(
                    class='btn-group'
                    role='group')
                        button(
                        type='button'
                        class='btn btn-danger'
                        data-dismiss='modal')
                            span(class='glyphicon glyphicon-remove')
                            span Cancel Sale
                        button(
                        type='button'
                        class='btn btn-success'
                        data-dismiss='modal')
                            span(class='glyphicon glyphicon-ok')
                            span Submit



