-@ val inventory: List[String]
-@ val produceKinds: List[String]

- attributes("title") = "Carrden Inventory"
div.jumbotron.masthead
    div.container
        h1 Carrden Inventory
        p Push some of these buttons to do stuff
        button(
        data-toggle='modal'
        data-target='#sale'
        class='btn btn-primary btn-lg')
            span(class='glyphicon glyphicon-edit')
            span Enter Sale

:javascript
    jQuery(function ($) {
        $('form[data-async]').live('submit', function (event) {
            var $form = $(this);
            var $target = $($form.attr('data-target'));
            $.ajax({
                type: $form.attr('method'),
                url: $form.attr('action'),
                data: $form.serialize(),
                success: function (data, status) {
                    $target.html(data);
                }
            });
            event.preventDefault();
        });
    });


div.container

    div(
        class='modal'
        id='sale'
        role='dialog'
        tabindex='-1'
        aria-labelledby='Sale'
        aria-hidden='true')
        div.modal-dialog
            div.modal-content
                div.modal-header
                    button(
                        type='button'
                        class='close'
                        data-dismiss='modal') x
                    h2 Sale
                div.modal-body
                    form(
                        class='form-horizontal well'
                        data-async data-target='#salel'
                        action='/some-endpoint'
                        method='POST')
                        ul
                            - for (kind <- produceKinds)
                                li(style='list-style-type: none;padding: 10px;')
                                    div.input-group
                                        div.input-group-addon
                                            =kind
                                        input(
                                            type='text'
                                            class='form-control'
                                            placeholder='amount')

                div.modal-footer
                    div(
                    class='btn-group'
                    role='group')
                        button(
                        type='button'
                        class='btn btn-danger'
                        data-dismiss='modal')
                            span(class='glyphicon glyphicon-remove')
                            span Cancel Sale
                        button(
                        type='button'
                        class='btn btn-success'
                        data-dismiss='modal')
                            span(class='glyphicon glyphicon-ok')
                            span Submit



